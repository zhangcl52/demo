<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hunter.sys.dao.SysUserDao" >

    <resultMap id="allResultMap" type="com.hunter.sys.entity.SysUserEntity">
        <id property="id" column="id"/>

        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>

        <result property="isDel" column="is_del"/>
        <result property="createTime" column="create_time"/>
        <result property="createName" column="create_name"/>
        <result property="lastModifyTime" column="modify_time"/>
        <result property="lastModifyName" column="modify_name"/>
    </resultMap>

    <select id="findAllUsers" resultMap="allResultMap">
        select * from sys_user where is_del=0
    </select>
    <select id="findOneById" resultMap="allResultMap" parameterType="long">
        select * from sys_user where is_del=0 and id=#{id}
    </select>
</mapper>